datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
}

enum Service {
  spotify
  spotifyplayback
  soundcloud
  apple
  tidal
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt   DateTime
}

model User {
  id            Int       @default(autoincrement()) @id
  auth0Id       String    @unique
  email         String    @unique
  firstName     String
  lastName      String
  updatedAt     DateTime  @updatedAt

  connections Connection[] // relation field
}

model Connection {
  id            Int       @default(autoincrement()) @id
  accessToken   String
  refreshToken  String
  connection    Service
  expiresAt     DateTime
  updatedAt     DateTime  @updatedAt

  userId        Int
  user          User      @relation(fields: [userId], references: [id])
}